<% if user_signed_in? %>
    <%= link_to 'Create run', new_run_path, class: 'btn btn-primary pull-right' %>
  <% if @runs.empty? %>
   <h1>No runs so far</h1>
  <% else %>
  <table class="table table-hover table-condensed">
    <thead>
    <tr>
      <th>Distance</th>
      <th>Duration</th>
      <th>Date</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= render @runs %>
    </tbody>
  </table>
  <% end %>
<% else %>
    <div class="container jumbotron">
      <h1>Sign in to create and view your runs</h1>
      <%= link_to 'Sign_in', new_user_session_path, class: 'btn btn-primary btn-lg' %>
    </div>
<% end %>
