<% if user_signed_in? %>
    <%= link_to 'Create run', new_run_path, class: 'btn btn-primary pull-right' %>
  <% if @runs.empty? %>
   <h1>No runs so far</h1>
  <% else %>
  <table id="run-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th>Distance (km)</th>
      <th>Duration</th>
      <th>Date</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= render @runs %>
    </tbody>
  </table>
  <% end %>
<% else %>
      <h1>Sign in to create and view your runs</h1>
      <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary btn-lg' %>
<% end %>